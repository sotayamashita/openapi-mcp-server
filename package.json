{
  "name": "@openapi-mcp/server",
  "version": "0.0.1",
  "description": "MCP Server that dynamically generates tools from an OpenAPI specification.",
  "keywords": [
    "openapi",
    "swagger",
    "oas",
    "mcp",
    "model-context-protocol",
    "server",
    "tool",
    "bridge",
    "cli",
    "api",
    "ai",
    "llm"
  ],
  "homepage": "https://github.com/sotayamashita/openapi-mcp-server",
  "bugs": {
    "url": "https://github.com/sotayamashita/openapi-mcp-server/issues"
  },
  "license": "MIT",
  "author": "Sota Yamashita",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openapi-mcp-server": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sotayamashita/openapi-mcp-server.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky",
    "build": "bun build --target=node --outfile=dist/index.js src/index.ts"
  },
  "lint-staged": {
    "*": "bunx prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@scalar/openapi-parser": "^0.10.14",
    "@scalar/openapi-types": "^0.2.0",
    "dotenv": "^16.4.7",
    "openapi-client-axios": "^7.5.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/jwt": "^1.2.0",
    "@types/bun": "latest",
    "@vitest/coverage-istanbul": "4.0.14",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "^4.0.0",
    "chokidar": "^5.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "elysia": "^1.2.25",
    "husky": "^9.1.7",
    "uuid": "^13.0.0",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "type": "module"
}
