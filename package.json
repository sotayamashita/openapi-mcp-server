{
  "name": "openapi-mcp-server",
  "type": "module",
  "scripts": {
    "commit": "cz",
    "prepare": "husky",
    "start": "concurrently --kill-others \"bun run start:server\" \"bun run start:inspector\"",
    "start:server": "bun run demo/server.ts",
    "start:inspector": "bunx @modelcontextprotocol/inspector bun run src/index.ts ./demo/openapi.yml"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@scalar/openapi-parser": "^0.10.14",
    "@scalar/openapi-types": "^0.2.0",
    "dotenv": "^16.4.7",
    "openapi-client-axios": "^7.5.5",
    "yaml": "^2.7.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/bun": "latest",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
